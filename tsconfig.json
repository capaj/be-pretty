{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "target": "es2015",
    "strict": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
}
